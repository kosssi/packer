{
  "variables": {
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "1h",
    "ssh_port": "22",
    "disk_size": "40960",
    "headless": "true",
    "vmname": "freebsd-10.1-amd64",
	"iso_url": "http://kartolo.sby.datautama.net.id/FreeBSD/ISO-IMAGES-amd64/10.1/FreeBSD-10.1-RELEASE-amd64-disc1.iso",
    "iso_checksum": "0c3d64ce48c3ef761761d0fea07e1935e296f8c045c249118bc91a7faf053a6b",   
    "iso_checksum_type": "sha256",
    "shutdown_command": "echo 'shutdown -p now' > shutdown.sh; cat 'shutdown.sh' | su -"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "load geom_mbr<wait>",
        "<enter><wait>",
        "load zfs<wait>",
        "<enter><wait>",
        "boot -s<wait>",
        "<enter><wait>",
        "<wait10><wait10>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait>",
        "<wait10><wait10>",
        "fetch -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/freebsd-9.3/install.sh && chmod +x /tmp/install.sh && /tmp/install.sh {{ .Name }}<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{ user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "FreeBSD_64",
      "http_directory": "http",
      "headless": "{{ user `headless`}}",
	  "iso_checksum_type": "{{ user `iso_checksum_type` }}",
	  "iso_checksum": "{{ user `iso_checksum` }}",
	  "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "{{user `shutdown_command`}}",
	  "ssh_password": "{{ user `ssh_password`}}",
	  "ssh_username": "{{ user `ssh_username`}}",
	  "ssh_port" : "{{user `ssh_port`}}",
	  "ssh_wait_timeout": "{{ user `ssh_wait_timeout`}}",
	  "vm_name": "{{ user `vmname`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    {
      "output": "/srv/nfs1/vagrant.klas.or.id/box/{{isotime \"2006-01-02\"}}/{{.Provider}}-{{ user `vmname`}}.box",
      "override": {
        "parallels": {
          "vagrantfile_template": "vagrantfile_templates/freebsd.rb"
        }
      },
      "type": "vagrant",
      "compression_level": 9
    }
  ],
  "provisioners": [
    {
      "execute_command": "export {{.Vars}} && cat {{.Path}} | su -m",
      "scripts": [
        "scripts/freebsd/postinstall.sh",
        "scripts/freebsd/vmtools.sh",
        "scripts/freebsd/cleanup.sh",
        "scripts/freebsd/minimize.sh"
      ],
      "type": "shell"
    }
  ]
}
